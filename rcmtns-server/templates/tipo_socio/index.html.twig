{% extends 'base2.html.twig' %}

{% block title %}TipoSocio index{% endblock %}
{% block stylesheets %}
    <link href="/Util/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
    <link href="/Util/datatables-responsive/dataTables.responsive.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Tipos de Socios</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading"> Lista Tipos de Socios</div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-hover" width="100%" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for tipo_socio in tipo_socios %}
                                <tr>
                                    <td>{{ tipo_socio.id }}</td>
                                    <td>{{ tipo_socio.nombre }}</td>
                                    <td>
                                        <a href="{{ path('tipo_socio_delete', {'id': tipo_socio.id}) }}">delete</a>
                                        <a href="{{ path('tipo_socio_edit', {'id': tipo_socio.id}) }}">edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="/Util/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/Util/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/Util/datatables-responsive/dataTables.responsive.js"></script>

    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}